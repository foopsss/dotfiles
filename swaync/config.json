{
    "$schema": "/etc/xdg/swaync/configSchema.json",

    "positionX": "right",
    "positionY": "top",

    "control-center-margin-top": 10,
    "control-center-margin-bottom": 10,
    "control-center-margin-right": 10,
    "control-center-margin-left": 10,
    "control-center-width": 450,
    "control-center-height": 600,
    "fit-to-screen": false,
    "keyboard-shortcuts": true,
    "hide-on-clear": true,
    "hide-on-action": true,

    "notification-window-width": 500,
    "notification-icon-size": 65,
    "notification-body-image-height": 100,
    "notification-body-image-width": 200,
    "timeout": 5,
    "timeout-low": 5,
    "timeout-critical": 0,
    "transition-time": 200,
    "image-visibility": "always",

    "widgets": [
        "menubar#label",
        "volume",
        "backlight",
        "buttons-grid",
        "title",
        "dnd",
        "notifications"
    ],
    
    "widget-config": {
    
        "menubar#label": {
            
            "menu#power-buttons": {
                "label": "", 
                "position": "right",
                "actions": [ 
                  {
                    "label": " Reiniciar...",
                    "command": "systemctl reboot"
                  },
                  {
                    "label": " Apagar...",
                    "command": "systemctl poweroff"
                  },
                  {
                    "label": " Cerrar la sesión...",
                    "command": "swaymsg exit"
                  }
                ]
            },
            
            "buttons#lock-button": {
                "position": "right",
                "actions": [ 
                    {
                        "label": "",
                        "command": "swaylock -c 000000"
                    }
                ]
            },
            
            "buttons#settings-button": {
                "position": "right",
                "actions": [ 
                    {
                        "label": "",
                        "command": "gnome-control-center"
                    }
                ]
            },
            
            "buttons#screenshot-button": {
                "position": "right",
                "actions": [ 
                    {
                        "label": "",
                        "command": "grim - | wl-copy"
                    }
                ]
            },
            
            "buttons#battery-button": {
                "position": "left",
                "actions": [ 
                    {
                        "label": "",
                        "command": "gnome-control-center power"
                    }
                ]
            }

        },
        
        "volume": {
            "label": ""
        },
        
        "backlight": {
            "label": "",
            "device": "amdgpu_bl0",
            "min": 10
        },
        
        "buttons-grid": {
            "actions": [
                {
                    "label": "",
                    "command": "alacritty -e nmtui"
                },
                {
                    "label": "",
                    "command": "alacritty -e nmtui"
                },
                {
                    "label": "",
                    "command": "alacritty -e nmtui"
                },
                {
                    "label": "",
                    "command": "alacritty -e nmtui"
                },
                {
                    "label": "",
                    "command": "alacritty -e nmtui"
                }
                
            ]
        }
    
    }
}
